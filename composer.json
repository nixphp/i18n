{
  "name": "nixphp/i18n",
  "description": "NixPHP Internationalization Plugin",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "nixphp-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\I18n\\": "src/"
    },
    "files": [
      "src/view_helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "nixphp/framework": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
